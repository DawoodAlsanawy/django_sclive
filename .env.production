# ========================================
# Django Sick Leave Management System
# Production Environment Variables for Namecheap
# نظام إدارة الإجازات المرضية - متغيرات البيئة للإنتاج
# ========================================

# ========================================
# Django Core Settings
# ========================================

# SECURITY WARNING: Generate a new secret key for production!
SECRET_KEY=your-very-secure-secret-key-change-this-in-production-50-characters-long

# Debug mode - MUST be False in production
DEBUG=False

# Allowed hosts - Add your domain names
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# ========================================
# Database Configuration for Namecheap
# ========================================

# MySQL Database settings
DB_NAME=cpanel_username_sclive
DB_USER=cpanel_username_sclive
DB_PASSWORD=your_strong_database_password
DB_HOST=localhost
DB_PORT=3306

# ========================================
# Static and Media Files
# ========================================

# Static files directory (absolute path)
STATIC_ROOT=/home/cpanel_username/public_html/sclive/staticfiles

# Media files directory (absolute path)
MEDIA_ROOT=/home/cpanel_username/public_html/sclive/media

# ========================================
# Email Configuration for Namecheap
# ========================================

# SMTP settings
EMAIL_HOST=mail.yourdomain.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@yourdomain.com
EMAIL_HOST_PASSWORD=your_email_password
DEFAULT_FROM_EMAIL=نظام إدارة الإجازات المرضية <noreply@yourdomain.com>

# ========================================
# Security Settings
# ========================================

# SSL/HTTPS settings
SECURE_SSL_REDIRECT=True

# ========================================
# Application Settings
# ========================================

# Company information
COMPANY_NAME=شركة الرعاية الطبية المتقدمة
SUPPORT_EMAIL=support@yourdomain.com

# System settings
ITEMS_PER_PAGE=25

# ========================================
# Logging
# ========================================

LOG_LEVEL=INFO
LOG_DIR=/home/cpanel_username/public_html/sclive/logs

# ========================================
# Cache Settings
# ========================================

CACHE_LOCATION=/home/cpanel_username/public_html/sclive/cache

# ========================================
# Instructions for Setup
# ========================================

# 1. Copy this file to .env in your project root
# 2. Replace 'cpanel_username' with your actual cPanel username
# 3. Replace 'yourdomain.com' with your actual domain
# 4. Generate a new SECRET_KEY using:
#    python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
# 5. Set strong database and email passwords
# 6. Test all configurations before going live
